 /* 底部加载更多样式 */
 .nohave{width: 100%;height: 80rpx;line-height: 80rpx;text-align: center;font-size: 26rpx;color: #a8a8a8;margin-top: 50rpx;}
 .nomore{width: 100%;height: 80rpx;line-height: 80rpx;text-align: center;font-size: 26rpx;color: #a8a8a8;margin-top: 30rpx;}
 .more{width: 100%;height: 80rpx;line-height: 80rpx;text-align: center;font-size: 26rpx;color: #a8a8a8;}
 
 /* 侧边按钮组 */
.side{width: 100rpx;height: 100rpx;position: fixed;bottom: 300rpx;right: 10rpx;border-radius: 50%;background-color: #49be1f;box-shadow: 0px 5px 18px 0px hsla(104, 100%, 24%, 0.4);font-size: 20rpx;color: #fff;display: flex;flex-direction: column;align-items: center;justify-content: center;}
.side image{width: 50rpx;height: 50rpx;}

/* 编辑器样式 */
.editor{width: 100%;box-sizing: border-box;padding: 30rpx;}
.editor image{max-width: 100%;}

/* 头部搜索框 */
.headSearch{box-sizing: border-box;padding: 20rpx 30rpx;background: #ffffff;display: flex;flex-direction: row;align-items: center;justify-content: space-between;position: fixed;top: 0;left: 0;z-index: 10;width: 100%;height: 100rpx;}
.searchContent{flex: 1;height: 60rpx;background: #f5f5f5;border-radius: 50rpx;position: relative;}
.searchContent icon{position: absolute;left: 26rpx;top: 50%;transform: translateY(-50%);}
.searchContent input{width: 100%;height: 100%;box-sizing: border-box;padding: 0 30rpx 0 70rpx;font-size: 26rpx;}
.headAddress{max-width: 200rpx;flex-shrink: 0;display: flex;flex-direction: row;align-items: center;font-size: 26rpx;margin-right: 20rpx;}
.headAddress image{width: 32rpx;height: 32rpx;margin-right: 6rpx;}
.headAddress view{width: 30rpx;height: 30rpx;transform: rotate(90deg);font-size: 30rpx;}

/* 分享选择弹出框 */
.share_dialog{position: fixed;top: 0;bottom: 0;left: 0;z-index: 66;width: 100%;background: rgba(0,0,0,0.5);}
.share{position: fixed;bottom: 0;left: 0;width: 100%;background: #ffffff;z-index: 99;}
.shareBtnCon{display: flex;flex-direction: row;align-items: center;justify-content: space-around;box-sizing: border-box;padding: 50rpx 30rpx 30rpx;}
.shareBtn{font-size: 26rpx;color: #0e0e0e;}
.shareBtn image{width: 80rpx;height: 80rpx;margin-bottom: 20rpx;}
.shareText{width: 100%;display: flex;flex-direction: row;align-items: center;box-sizing: border-box;padding: 0 30rpx 30rpx;}
.shareText view{flex: 1;height: 1px;background: #dcdcdc;}
.shareText text{font-size: 26rpx;color: #a8a8a8;margin: 0 20rpx;}

/* 评论列表 */
.commentHead{width: 100%;box-sizing: border-box;padding: 30rpx 30rpx 0rpx;display: flex;flex-direction: row;align-items: center;font-size: 32rpx;color: #1a1a1a;}
.commentHead text{color: #e50112;font-size: 44rpx;margin-left: 10rpx;}
.commentList{width: 100%;box-sizing: border-box;padding: 30rpx;display: flex;flex-direction: row;align-items: flex-start;border-bottom: 1px solid #F4F5F6;}
.commentList_image{width: 60rpx;height: 60rpx;border-radius: 50%;margin-right: 30rpx;}
.commentList_detail{width: calc(100% - 90rpx);}
.commentList_head{display: flex;flex-direction: row;align-items: center;justify-content: space-between;}
.commentList_name{width: 440rpx;height: 36rpx;font-size: 28rpx;color: #5E6FB7;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;}
.commentList_Btn{line-height: 44rpx;padding: 0 20rpx;border-radius: 50rpx;background: #F4F5F6;font-size: 24rpx;color: #5E6FB7;white-space: nowrap;display: none;}
.commentList_content{width: 100%;color: #333333;font-size: 30rpx;margin-top: 14rpx;}
.commentList_time{font-size: 24rpx;color: #a8a8a8;margin-top: 14rpx;}
.commentList_reply{width: 100%;box-sizing: border-box;padding: 20rpx;background: #F4F5F6;font-size: 28rpx;color: #333333;margin-top: 20rpx;}
