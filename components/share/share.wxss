@import "/utils/animate.wxss";
/* 分享选择弹出框 */
.share_dialog{ position: fixed; top: 0; bottom: 0; left: 0; z-index: 999; width: 100%; background: rgba(0,0,0,0.5); }
.share_dialog .bg{position: fixed;top: 0;left: 0;right: 0;bottom: 0;z-index:999;background: rgba(0, 0, 0, 0.5);}
.share{ position: fixed; bottom: 0; left: 0; width: 100%; background: #ffffff; z-index: 1000; }
.shareBtnCon{ display: flex; flex-direction: row; align-items: center; justify-content: space-around; box-sizing: border-box; padding: 50rpx 30rpx 30rpx; }
.shareBtn{ font-size: 26rpx; color: #0e0e0e; background: none; padding: 0; margin: 0; line-height: 1; }
.shareBtn .logo{ width: 80rpx; height: 80rpx; margin-bottom: 20rpx; }
.shareText{ width: 100%; display: flex; flex-direction: row; align-items: center; box-sizing: border-box; padding: 0 30rpx 30rpx; }
.shareText .line{ flex: 1; height: 1px; background: #dcdcdc; }
.shareText .text{ font-size: 26rpx; color: #a8a8a8; margin: 0 20rpx; }
/* 分享选择弹出框-END */


.attention_wrap{position: fixed;top: 0;left: 0;right: 0;bottom: 0;z-index: 999;}
.attention_wrap .bg{position: fixed;top: 0;left: 0;right: 0;bottom: 0;z-index:999;background: rgba(0, 0, 0, 0.5);}
.attention_wrap .info_wrap{width: 600rpx;position: fixed;top: 50%;left: 50%;margin-left: -300rpx;z-index: 1000;-webkit-transform: translateY(-50%);transform: translateY(-50%);border-radius: 10rpx;}
.attention_wrap .info_wrap .iconcuowu{position: absolute;right: 0rpx;top: -70rpx;color: #fff;width: 45rpx;height: 45rpx;text-align: center;line-height: 45rpx;border-radius: 50%;border: 2rpx solid #fff;font-size: 22rpx;}
.attention_wrap .info_wrap .code{display: block;width: 100%;height: auto;}
.attention_wrap .info_wrap .save{width:100%;text-align: center;color: #fff;font-size: 28rpx;}