page{ background: #F4F6FA; }

.head{width: 100%;height: 300rpx;}
.head .bg{width: 203rpx;height: 135rpx;bottom: 40rpx;right: 136rpx;z-index: 10;}
.head .content{width: 100%;height: 100%;top: 0;left: 0;bottom: 0;z-index: 20;}

.user{width: 100%;}
.user .logo{width: 110rpx;height: 110rpx;}
.user .phone{line-height: 36rpx;padding: 0 10rpx;border: 1px solid rgba(255,255,255,0.6);}

.head .info{bottom: 0;left: 0;z-index: 20;width: 100%;}
.head .info .item{box-sizing: border-box;padding: 30rpx 0;}
.head .info .item view{margin-bottom: 20rpx;}


/*订单部分*/
.order{width: 100%;background: linear-gradient(to bottom,#fff 95%,#F4F6FA 100%);}
.order-list{border-top: 1px solid #eee;}
.order-list .item{display: flex;flex-direction: column;align-items: center;justify-content: center;padding: 40rpx 0;}
.order-list .item .img-con{width: 60rpx;height: 60rpx;}
.order-list .item .img-con image{width: 100%;height: 100%;}
.order-list .item .img-con view{min-width: 36rpx;line-height: 36rpx;text-align: center;box-sizing: border-box;padding: 0 10rpx;font-size: 24rpx;font-family: monospace;border-radius: 50rpx;top: -10rpx;right: -10rpx;color: #fff;background: #E5460A;}
.order-list .item>text{margin-top: 10rpx;font-size: 24rpx;}


/*资产部分*/
.assets{width: 710rpx; margin: 20rpx auto;}
.assets .list{width: 100%;}
.assets .list .item{display: flex;flex-direction: column;align-items: center;padding: 30rpx 0;}
.assets .list .item view{font-size: 30rpx;color: #E5460A;font-weight: bold;}
.assets .list .item text{font-size: 24rpx;margin-top: 10rpx;}
.assets.menu .list .item{width: 25%;}
.assets.menu .list .item view{width: 60rpx;height: 60rpx;}
.assets.menu .list .item view image{width: 100%;height: 100%;}
.assets.menu .list .item text{margin-top: 20rpx;}