@import "/template/goods/goode.wxss";

.discount .item{padding: 0 30rpx;}
.discount .item:last-child{border:0;}
.discount .item .row{min-height: 95rpx;}
.discount .item .row .tips{width: 30rpx;height: 30rpx;display: block;line-height: 28rpx;margin-right: 10rpx;border-radius: 4rpx;}
.discount .item .discount_tips{padding: 0rpx 0 20rpx 40rpx;margin-top: -5rpx;}
.discount .item .coupon{padding: 0rpx 7rpx;display: inline-block;line-height: 40rpx;border-radius: 4rpx;margin-right: 8rpx;}
.to_pay{left: 0;right: 0;bottom: 0;width: 100%;line-height: 100rpx;box-shadow: 0 0 10rpx 5rpx rgba(138,138,137,.1);}

.coupon_popup{z-index: 999;}
.coupon_popup .bg{top: 0;left: 0;right: 0;bottom: 0;background-color: rgba(0,0,0,.8);}
.coupon_popup .info{left: 0;right: 0;bottom: 0;max-height: 50vh;padding: 0 30rpx;transition: all .2s linear;overflow-y: scroll;}
.coupon_popup .info .no_used{margin: 20rpx auto;line-height: 90rpx;}
.coupon_popup .item{margin: 20rpx 0;overflow: hidden;}
.coupon_popup .item .left{width: 230rpx;height: 160rpx;flex-direction: column;justify-content: center;}
.coupon_popup .item .left::after{content: '';width: 2rpx;height: 90rpx;position: absolute;right: 0;top: 40rpx;border-right: 1rpx solid #EEE;}
.coupon_popup .item .right{padding-left: 40rpx;}
.coupon_popup .item .right .name{margin-bottom: 16rpx;}
.coupon_popup .item .active{top: -15rpx;right: -50rpx;padding: 30rpx 50rpx 5rpx;transform: rotate(45deg);display: block;}
.coupon_popup .item .active span{display: block;transform: rotate(-45deg);}

.pay_popup{z-index: 999;}
.pay_popup .bg{top: 0;left: 0;right: 0;bottom: 0;background-color: rgba(0,0,0,.8);}
.pay_popup .content{left: 0;right: 0;bottom: 0;transition: all .2s linear;border-top-left-radius: 20rpx;border-top-right-radius: 20rpx;background-color: #FAFAFC;}
.pay_popup .content .tit{line-height: 90rpx;border-top-left-radius: 20rpx;border-top-right-radius: 20rpx;}
.pay_popup .content .tit .iconcuowu{line-height: 90rpx;top: 0;right: 20rpx;}
.pay_popup .content .type{padding: 15rpx 20rpx;}
.pay_popup .content .item{height: 100rpx;}
.pay_popup .content .item .icon_wrap{width: 40rpx;height: 40rpx;justify-content: center;margin-left: 15rpx;border: 1px solid #ddd;}
.pay_popup .content .item .left{width: 50rpx;height: 50rpx;justify-content: flex-start;margin-right: 10rpx;}
.pay_popup .content .item .left .iconweixincopy{color:#11AC36;margin-left: 2rpx;}
.pay_popup .content .item .right{justify-content: flex-end;}
.pay_popup .content .to_pay_btn{line-height: 90rpx;margin: 0 20rpx 30rpx;}