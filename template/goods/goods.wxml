<template name="bargain_copy">
	<view class="goods-item flex bg-ff sizing p-20 mb-20 radius-10" data-url="{{order ? 'pages/bargain/bargainTask/bargainTask?task_id='+task_id : 'pages/bargain/bargainGoods/bargainGoods?active_id='+active_id}}" bindtap="skipPage">
		<!-- 商品图片 -->
		<view class="logo box-220 mr-30 radius-10">
			<image src="{{ goods.goods_image }}"></image>
		</view>
		<view class="goods-detail flex-box flex-dir-col flex-x-b sizing ptb-15">
			<!-- 商品名称 -->
			<view class="twolist f-28" style="min-height: 60rpx">{{ goods.goods_name }}</view>
			<block wx:if="{{order}}">
				<!-- 砍价进度 -->
				<view class="task-rate f-26 c-a8 mt-15">
					<block wx:if="{{ status }}">
						<text>已砍</text>
						<text class="c-red">{{ cut_money }}</text>
						<text>元，</text>
						<text>只差</text>
						<text class="c-red">{{ surplus_money }}</text> 
						<text>元</text>
					</block>
					<block wx:if="{{ is_floor }}">
						<text>已砍至最低</text>
						<text class="col-m">{{ floor_price }}</text>
						<text>元</text>
					</block>
				</view>
				<!-- 任务状态 -->
				<view class="task-status mt-30">
					<!-- 倒计时 -->
					<view wx:if="{{ status }}" class="count-down flex flex-x-s f-26">
						<view class="clock-text mr-10"> <text>剩余</text> </view>
						<view class="clock flex monospace">
							<view class="plr-8 lh-40 radius-8 bg-33 c-ff"> <text>{{ actEndTimeList.day }}</text> </view>
							<view class="plr-8"> <text>:</text> </view>
							<view class="plr-8 lh-40 radius-8 bg-33 c-ff"> <text>{{ actEndTimeList.hou }}</text> </view>
							<view class="plr-8"> <text>:</text> </view>
							<view class="plr-8 lh-40 radius-8 bg-33 c-ff"> <text>{{ actEndTimeList.min }}</text> </view>
							<view class="plr-8"> <text>:</text> </view>
							<view class="plr-8 lh-40 radius-8 bg-33 c-ff"> <text>{{ actEndTimeList.sec }}</text> </view>
						</view>
					</view>
					<view wx:if="{{ !status }}" class="mt-30 f-26 lh-50">
						<text class="c-red">{{ is_buy ? '砍价成功' : '已结束' }}</text>
					</view>
				</view>
			</block>
			<block wx:else>
				<!-- 参与的用户头像 -->
				<view wx:if="{{ helps_count > 0 }}" class="flex flex-x-s">
					<view class="user-list flex mr-10">
						<view wx:for="{{ helps }}" wx:for-item="help" wx:for-index="idx" wx:key="this" class="user-item-avatar">
							<image class="radius-all" src="{{ help.user.avatarUrl }}" style="width: 36rpx;height:36rpx;margin-left: {{idx == 0 ? '0' : '-8rpx'}};"></image>
						</view>
					</view>
					<view class="f-24 f-88"> <text>{{ helps_count }}人正在砍价</text> </view>
				</view>
				<view class="flex flex-y-e mt-10">
