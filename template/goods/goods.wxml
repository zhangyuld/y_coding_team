						<view class="line-t f-26 c-a8">￥{{ goods.goods_sku.goods_price }}</view>
						<!-- 砍价低价 -->
						<view class="c-red f-26">最低￥<text class="f-32">{{ floor_price }}</text></view>
					</view>
					<view class="bg-m lh-50 plr-20 radius-10 c-ff f-28">立即参加</view>
