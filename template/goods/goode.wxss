.goods-item{width: 100%;}
.goods-item .logo image{width: 100%;height: 100%;border-radius: inherit;}
.goods-item .info{width: 100%;}
.goods-item .btn{width: 180rpx;line-height: 60rpx;text-align: center;border-radius: 50rpx;box-shadow:0px 3px 5px 0px rgba(205,100,7,0.3);}


.goods-two{width: 330rpx;}
.goods-two .logo{width: 100%;height: 330rpx;}
.goods-two .logo image{width: 100%;height: 100%;}
.goods-two .detail{width: 100%;height:calc(100% - 330rpx);}
.goods-two .detail .info{width: 100%;}


.pay_popup{z-index: 999;}
.pay_popup .bg{top: 0;left: 0;right: 0;bottom: 0;background-color: rgba(0,0,0,.8);}
.pay_popup .content{left: 0;right: 0;bottom: 0;transition: all .2s linear;border-top-left-radius: 20rpx;border-top-right-radius: 20rpx;background-color: #FAFAFC;}
.pay_popup .content .tit{line-height: 90rpx;border-top-left-radius: 20rpx;border-top-right-radius: 20rpx;}
.pay_popup .content .tit .iconcuowu{line-height: 90rpx;top: 0;right: 20rpx;}
.pay_popup .content .type{padding: 15rpx 20rpx;}
.pay_popup .content .item{height: 100rpx;}
.pay_popup .content .item .icon_wrap{width: 40rpx;height: 40rpx;justify-content: center;margin-left: 15rpx;border: 1px solid #ddd;}
.pay_popup .content .item .left{width: 50rpx;height: 50rpx;justify-content: flex-start;margin-right: 10rpx;}
.pay_popup .content .item .right{justify-content: flex-end;}
.pay_popup .content .to_pay_btn{line-height: 90rpx;margin: 0 20rpx 30rpx;}