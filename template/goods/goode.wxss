.goods-item{width: 100%;box-sizing: border-box;padding: 30rpx 20rpx;}
.goods-item .logo{width: 250rpx;height: 250rpx;border-radius: 20rpx;margin-right: 20rpx;flex-shrink: 0;}
.goods-item .logo image{width: 100%;height: 100%;border-radius: inherit;}
.goods-item .title{font-size: 30rpx;}
.goods-item .text{font-size: 26rpx;color: #A5A5A5;}
.goods-item .info{width: 100%;}
.goods-item .btn{width: 180rpx;line-height: 60rpx;text-align: center;border-radius: 50rpx;box-shadow:0px 3px 5px 0px rgba(205,100,7,0.3);}